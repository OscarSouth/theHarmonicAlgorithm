moog f s r d = p "moogMother32" $ do
  let o = ch 14
  f
    $ stack [silence
       -- --
      ,mono $ arrange flow (overlapF 0 s) r (-9,9) ["~"
        ,degradeBy 0.5 $ fast (choose [1,2,3,4]) $ "[0]/4" |+ irand 5
        -- ,"[0 1 2 3 4 5 6]/8"
      ]# o |* vel 1 |= legato 0.9 |- oct 1
       -- --
      ,portamento 0.0
       -- --
    ] |* vel d

mfam f s r d = p "moogDFAM" $ do
  let (osc1,osc2) = (ch 12,ch 13)
  let pat = ""
  f
    $ stack [silence
       -- --
      ,steptrig "[1 2 3 4 5 6 7 8]/2"
       -- --
      ,arrange flow (overlapF 0 s) r (-9,9) ["~"
        ,"[0]/4"
      ]# osc1 |* vel 1 |- oct 1
       -- --
      ,arrange flow (overlapF 0 s) r (-9,9) ["~"
        ,pat
      ]# osc2 |* vel 1 |- oct 1
       -- --
    ] |* vel d

s101 f s r d = p "sh101" $ do
  let o = ch 15
  f
    $ stack [silence
       -- --
      ,arrange flow (overlapF 0 s) r (-9,9) ["~"
        ,degradeBy 0.5 $ "[0?,1?,2?]/4" |+ irand 3
