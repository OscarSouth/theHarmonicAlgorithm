mfam f s r d = p "moogDFAM" $ do
  let (osc1,osc2) = (ch 12,ch 13)
  let pat = melody
  f
    $ stack [silence
       -- --
      ,steptrig "[1 2 3 4 5 6 7 8]/2"
       -- --
      ,mono $ arrange flow (prog sharp [(+(-1)) <$> harmMin]) r (-9,12) ["~"
        ,pat
      ]# osc1 |= vel 1 |- oct 1
       -- --
      ,mono $ arrange flow (overlapF 0 s) r (-9,9) ["~"
        ,"0*2"
      ]# osc2 |= vel 1 |- oct 2
       -- --
    ] |* vel d #legato 0.01
